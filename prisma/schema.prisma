generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id String @id @default(cuid())
  telegram_id String @unique
  invitation_link String
  premium_links Premium_link[] @relation("user")
  childrens Relation[] @relation("children_user")
  parent Relation? @relation("parent_user")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Relation {
  id Int @id @default(autoincrement())
  parent User @relation("parent_user",fields: [parent_id], references: [id])
  parent_id String  @unique

  children User @relation("children_user", fields: [children_id], references: [id])
  children_id String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Premium_link {
  id Int @id @default(autoincrement())
  user User @relation("user", fields: [user_id], references: [id])
  user_id String @unique
  chat_id String @unique
  link String
}